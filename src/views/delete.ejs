<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Delete User</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>

  <body>
    <div>
      <div class="topnav">
        <a href="/">Home</a>
        <a href="/create">Update Users</a>
      </div>
      <div class="form-add-new">
        <form action="/delete-user" method="POST">
          <fieldset>
            <legend>Delete a users</legend>
            <div class="input-group d-none">
              <label>Id: </label>
              <input type="text" name="userId" value=" <%= userEdit.id%>"/>
            </div>
            <div class="input-group">
              <label>Are you sure delete this user with this email: </label>
              <input type="email" id="emailId" name="email" value=" <%= userEdit.email %>"/>
            </div>
              <button>Confirm</button>
            </div>
          </fieldset>
        </form>
      </div>
    </div>
  </body>
</html>
